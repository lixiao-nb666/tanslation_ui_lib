<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="1.0"
    android:gravity="center_horizontal"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="0.88"
        android:weightSum="1.0"

        android:orientation="vertical">

        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="0.05"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@drawable/item_bj"
            android:layout_weight="0.42"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_from"
                android:layout_width="126px"
                android:layout_height="92px"
                android:background="@drawable/select_statu"
                android:layout_marginTop="44px"
                android:layout_marginLeft="35px"
                android:layout_alignParentLeft="true"
                android:textSize="19px"
                android:textColor="@color/text_color"
                android:text="from language"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="225px"
                android:text="From Language"
                android:textSize="19px"
                android:includeFontPadding="false"
                android:layout_alignParentTop="true"
                android:textColor="@color/text_title_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="225px"
                android:layout_marginRight="85px"
                android:layout_marginTop="25px"
                android:layout_marginBottom="25px">

                <TextView
                    android:id="@+id/tv_init"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="0.06"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.42"
            android:background="@drawable/item_bj"
            android:orientation="horizontal">



            <Button
                android:id="@+id/bt_to"
                android:layout_width="130px"
                android:layout_height="95px"
                android:background="@drawable/select_statu"
                android:layout_marginTop="42px"
                android:layout_marginLeft="33px"
                android:textSize="19px"
                android:textColor="@color/text_color"
                android:text="to language"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="225px"
                android:text="To Language"
                android:textSize="19px"
                android:includeFontPadding="false"
                android:layout_alignParentTop="true"
                android:textColor="@color/text_title_color"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="225px"
                android:layout_marginRight="85px"
                android:layout_marginTop="25px"
                android:layout_marginBottom="25px">

                <TextView
                    android:id="@+id/tv_tran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/text_color" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="0.05"/>

    </LinearLayout>
</LinearLayout>