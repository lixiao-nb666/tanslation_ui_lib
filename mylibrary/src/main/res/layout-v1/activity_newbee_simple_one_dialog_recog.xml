<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57px"
        android:layout_marginLeft="57px"
        android:gravity="center"
        android:alpha="0.85"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_from"
            android:layout_width="132px"
            android:layout_height="36px"
            android:background="@drawable/select_statu_1"
            android:textSize="14px"

            android:text="from language"/>


        <Button
            android:id="@+id/bt_to"
            android:layout_width="132px"
            android:layout_height="36px"
            android:background="@drawable/select_statu_2"
            android:textSize="14px"

            android:text="to language"/>


    </LinearLayout>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">




        <LinearLayout
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="1.0"
            android:orientation="vertical"
            android:layout_marginBottom="41px"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_history"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:layout_marginLeft="118px"
                android:layout_marginRight="118px"
                />

            <TextView
                android:id="@+id/tv_tran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11px"
                android:textSize="22px"
                android:gravity="center"
                android:layout_marginLeft="36px"
                android:layout_marginRight="36px"
                android:textColor="@color/text_translation_over_color" />



        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305px"
            android:background="@drawable/text_hide_bj" />

        <TextView
            android:id="@+id/tv_ts_statu"
            android:layout_width="match_parent"
            android:layout_height="41px"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/text_ts_statu_color"
            android:text=""
            android:alpha="0.9"
            />

    </FrameLayout>









</LinearLayout>